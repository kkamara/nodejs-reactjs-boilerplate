{
  "name": "nodejs-reactjs-boilerplate",
  "version": "0.1.0-development",
  "description": "(2021) A NodeJS boilerplate with ReactJS 19 Redux SPA.",
  "main": "src/app.js",
  "scripts": {
    "test": "mocha tests/",
    "start": "cross-env DEBUG=express:* yarn node src/app.js",
    "dev": "cross-env DEBUG=express:* yarn nodemon src/app.js --trace-warnings",
    "migrate": "cross-env NODE_ENV=development npx sequelize-cli db:migrate --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "migrate:undo": "cross-env NODE_ENV=development npx sequelize-cli db:migrate:undo --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "migrate:undo:all": "cross-env NODE_ENV=development npx sequelize-cli db:migrate:undo:all --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "seed": "cross-env NODE_ENV=development npx sequelize-cli db:seed:all --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "seed:test": "cross-env NODE_ENV=test npx sequelize-cli db:seed:all --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'",
    "seed:undo:all": "cross-env NODE_ENV=development npx sequelize-cli db:seed:undo:all --config='./config.json' --models-path='src/models' --migrations-path='src/migrations' --seeders-path='src/seeders'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkamara/nodejs-reactjs-boilerplate.git"
  },
  "author": "https://github.com/kkamara",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/kkamara/nodejs-reactjs-boilerplate/issues"
  },
  "homepage": "https://github.com/kkamara/nodejs-reactjs-boilerplate#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "cookie-parser": "^1.4.4",
    "deep-clone": "^3",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "express-minify-html": "^0.12.0",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.0",
    "moment-timezone": "^0.5.48",
    "morgan": "^1.10.0",
    "mysql2": "^2",
    "nodemon": "^2.0.22",
    "pug": "^3.0.2",
    "sanitize": "^2.1.0",
    "sequelize": "^6.13.0",
    "vali-admin": "^4.0.0"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.4",
    "open": "^8.2.1",
    "sequelize-cli": "^6.6.2"
  }
}
